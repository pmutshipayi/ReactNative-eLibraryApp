
@{
    ViewData["Title"] = "Pictures";
    Layout = "Profile.cshtml";
}
@using  ILabrary.ModelViews.Libraries
@model IEnumerable<BookPictureViewModel>

<div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
        <a asp-area="" asp-controller="Book" asp-action="Create" class="btn btn-sm btn-outline-secondary">
            <span data-feather="plus"></span>
        </a>
        <button class="btn btn-sm btn-outline-secondary">
            <span data-feather="refresh-cw"></span>
        </button>
    </div>
</div><br >
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @if (Model != null)
            {
                @foreach (var picture in Model)
                {
                    <div class="col-md-3">
                        <a href="#">
                            <div class="card mb-3 shadow-sm">
                                <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="~/uploads/@Url.Content(picture.FullPath)" />
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>